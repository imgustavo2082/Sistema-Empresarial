@{
    ViewBag.Title = "Delete";
}

@{
    Layout = null;
}

@Html.Partial("NavBar")

<div  align="center">
    <h2>Delete</h2>

    <h3>¿Deseas Borrarlo?</h3>
   
    <div>
        <h4>Empleados</h4>
        <hr />
        <dl class="dl-horizonta table-primary">
            <dt>
                Codigo:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.codigo)
            </dd>
            <dt>
                Nombre:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.nombre)
            </dd>
            <dt>
                Apellido:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.apellido)
            </dd>
            <dt>
                Telefono:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.telefono)
            </dd>
            <dt>
                Departamento:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.departamento)
            </dd>
            <dt>
                Cargo:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.cargo)
            </dd>
            <dt>
                Fecha Entrada:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.fechaentrada)
            </dd>
            <dt>
                Salario:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.salario)
            </dd>
            <dt>
                Estado:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.estado)
            </dd>
        </dl>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div>
                <input type="submit" value="Borrar" class="btn btn-outline-primary btn-block" />

            </div>
            <p class="btn btn-link">
                @Html.ActionLink("Volver Atras", "Index")
            </p>
        }
    </div>
</div>
